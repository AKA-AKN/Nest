FROM python:3.12

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN groupadd owasp && \
    useradd --create-home --home-dir /home/owasp -g owasp owasp && \
    python -m pip install --no-cache-dir poetry && \
    rm -rf /var/lib/apt/lists/*

ENV PYTHONUNBUFFERED=1

EXPOSE 8000

USER owasp

VOLUME /home/owasp

WORKDIR /home/owasp
